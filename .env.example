# HTTP port exposed by the Express server
PORT=3000

# Shared API key required in the x-api-key header for /api/v1 requests
API_KEY=demo-api-key

# Path (relative or absolute) to the SQLite database file
DATABASE_PATH=./data/battery.sqlite

# Pino log level (trace|debug|info|warn|error|fatal|silent)
LOG_LEVEL=info

# Default vehicleId used when running simulation scenarios without overrides
SIMULATION_DEFAULT_VEHICLE_ID=simulated-vehicle

# Rate limiter window in milliseconds (default 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum number of requests allowed per IP within the rate limiter window
RATE_LIMIT_MAX=120

# Header name used to propagate correlation/request IDs end-to-end
REQUEST_ID_HEADER=x-request-id
